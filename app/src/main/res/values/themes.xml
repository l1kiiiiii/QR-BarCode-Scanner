<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Main theme based on AppCompat -->
    <style name="Theme.Recycly" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your AppCompat-compatible theme here -->
        <item name="colorPrimary">@color/my_primary_color</item>
        <item name="colorPrimaryDark">@color/my_primary_dark_color</item>
    </style>

    <!-- Optional splash theme -->
    <style name="Theme.Recycly.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/my_primary_dark_color</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_background</item>
        <item name="postSplashScreenTheme">@style/Theme.Recycly</item>
    </style>

</resources>
